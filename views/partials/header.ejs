<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Trivial Matters</title>
    <link rel ="stylesheet" type ="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css">
    <link rel="stylesheet" type ="text/css" href="/stylesheets/styles.css">

  </head>
  
  <body>
    <nav class="ui inverted menu">
      <div class="ui container">
        <div class="item">
          <a href="/"><i class="huge white idea icon"></i><strong>Trivial Matters</strong></a>
        </div>
        <div class="item">
          <a href="/play">Play Trivia</a>
        </div>
        <% if(!currentUser){ %>
          <div class="item right aligned">
            <a href="/login">Login</a>
          </div>
        <% } else { %>
          <div class="item">
            <a href="/questions/new">Add New Question</a>
          </div>
          <div class="item">
            <a href="/questions">Manage Questions</a>
          </div>
          <div class="item right aligned">
            <a href="#"><%= currentUser.username %></a>
          </div>
          <div class="item">
            <a href="/logout" class="item">Log Out</a>
          </div>
        <% } %>
      </div>
    </nav>


    <div class="ui text container">

        <% if(error && error.length > 0){ %>

            <div class="ui red message" id ="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if(success && success.length > 0){ %>
            <div class="ui green message" id="alert">
                <%= success %>
            </div>
        <% } %>
    </div>

