<% include ../partials/header %>

<div class="ui main text container segment">
    
    <div class="ui huge header centered">
        <%= randomQuestion.category %>
    </div>    

    <div class="ui container">

            <% if(randomQuestion.media) { %>

                    <div class="image">
                        <img class="ui fluid image" src="<%= randomQuestion.media %>"> 
                    </div>

            <% } %>

    
        <div class="ui padded text content segment">
                <h3 class="ui header"><%= randomQuestion.question %></h3> 
                <form class="ui form" action="/play/" method="POST">
                    <div class="field">
                        <label>Answer: </label>
                        <input type="text" name="response">
                    </div>
                    <input type="hidden" name="questionID" value="<%= randomQuestion.id %>">

                    <button class="ui primary button centered" id="answerButton">That's my answer!</button>
                </form>
        </div>
    </div>
 
 




<% include ../partials/footer %>